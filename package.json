{
  "name": "screen-awesome",
  "description": "Screen recording and editing app",
  "author": "Tam Nguyen",
  "private": true,
  "version": "1.0.63",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "clean": "rimraf dist dist-electron build",
    "build": "npm run clean && tsc && vite build && electron-builder -l --publish always",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview"
  },
  "dependencies": {
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@tailwindcss/vite": "^4.1.13",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "electron-log": "^5.4.3",
    "electron-store": "^10.1.0",
    "immer": "^10.1.3",
    "lucide-react": "^0.544.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.13",
    "zundo": "^2.0.0-beta.24",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@types/react": "^18.2.64",
    "@types/react-dom": "^18.2.21",
    "@typescript-eslint/eslint-plugin": "^7.1.1",
    "@typescript-eslint/parser": "^7.1.1",
    "@vitejs/plugin-react": "^4.2.1",
    "electron": "^30.0.1",
    "electron-builder": "^24.13.3",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "typescript": "^5.2.2",
    "vite": "^5.1.6",
    "vite-plugin-electron": "^0.28.6",
    "vite-plugin-node-polyfills": "^0.24.0"
  },
  "main": "dist-electron/main.js",
  "build": {
    "appId": "com.screenawesome.app",
    "productName": "ScreenAwesome",
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "binaries/**/*",
      "!dist/*.{AppImage,yml,yaml,exe,dmg,zip}",
      "!dist/*-unpacked/"
    ],
    "asarUnpack": [
      "binaries/**"
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "public/screenawesome-appicon.ico",
      "artifactName": "${productName} Setup ${version}.${ext}"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "public/screenawesome-appicon.icns"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "icon": "public/screenawesome-appicon.png",
      "category": "Utility",
        "artifactName": "ScreenAwesome-${version}-linux-x64.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "directories": {
      "buildResources": "public"
    }
  },
  "publish": [
    {
      "provider": "github",
      "owner": "tamnguyenvan",
      "repo": "screen-awesome",
      "draft": false,
      "releaseType": "release"
    }
  ]
}
