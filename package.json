{
  "name": "screen-awesome",
  "description": "Screen recording and editing app",
  "author": "Tam Nguyen",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "npm run build:python && tsc && vite build && electron-builder",
    "build:python": "pyinstaller --noconfirm --onedir --clean --distpath python/dist python/tracker.py",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview"
  },
  "dependencies": {
    "@radix-ui/react-tooltip": "^1.2.8",
    "@tailwindcss/vite": "^4.1.13",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "electron-log": "^5.4.3",
    "fluent-ffmpeg": "^2.1.3",
    "immer": "^10.1.3",
    "lucide-react": "^0.544.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.13",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@types/fluent-ffmpeg": "^2.1.27",
    "@types/react": "^18.2.64",
    "@types/react-dom": "^18.2.21",
    "@typescript-eslint/eslint-plugin": "^7.1.1",
    "@typescript-eslint/parser": "^7.1.1",
    "@vitejs/plugin-react": "^4.2.1",
    "electron": "^30.0.1",
    "electron-builder": "^24.13.3",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "typescript": "^5.2.2",
    "vite": "^5.1.6",
    "vite-plugin-electron": "^0.28.6",
    "vite-plugin-node-polyfills": "^0.24.0"
  },
  "main": "dist-electron/main.js",
  "build": {
    "appId": "com.screenawesome.app",
    "productName": "ScreenAwesome",
    "files": [
      "dist/",
      "dist-electron/",
      "python/dist/",
      "binaries/"
    ],
    "asarUnpack": [
      "python/dist/**",
      "binaries/**"
    ],
    "linux": {
      "target": [
        "AppImage"
      ],
      "icon": "public/screenawesome-appicon.png",
      "category": "Utility"
    },
    "appImage": {
      "args": "--no-sandbox"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "public/screenawesome-appicon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
